{% extends 'base.html.twig' %}

{% block title %}Vehicle{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container dark-modal">
    <h1>Put new car for rent âœ…</h1>
    	<p><a href="/signup" }}>SignUp</a></p>
        {% if isOk %}
            <div class="alert alert-dismissible alert-success">
                <h2>your car is listed to rent</h2>
            </div>
        {% endif %}
        <br>
        <h2 style="text-align: center">Your car information</h2>
        <div class="px-4 py-3">
            {{ form_start(vehicleInscriptionForm) }}
            {{ form_row(vehicleInscriptionForm.brand, {
                'label': "Brand",
                'attr': {
                    class: "form-control"
                }
            }) }}
            {{ form_row(vehicleInscriptionForm.model, {
                'label': "Model",
                'attr': {
                    class: "form-control"
                }
            }) }}
            {{ form_row(vehicleInscriptionForm.colour, {
                'label': "Color",
                'attr': {
                    class: "form-control"
                }
            }) }}
            {{ form_row(vehicleInscriptionForm.city, {
                'label': "City",
                'attr': {
                    class: "form-control"
                }
            }) }}
            {{ form_row(vehicleInscriptionForm.license_plate, {
                'label': "License Plate*",
                'attr': {
                    class: "form-control"
                }
            }) }}
            {{ form_row(vehicleInscriptionForm.mileage, {
                'label': "Mileage",
                'attr': {
                    class: "form-control"
                }
            }) }}
             
            {{ form_row(vehicleInscriptionForm.daily_price, {
                'label': "Daily Price*",
                'attr': {
                    class: "form-control"
                }
            }) }}
			   {{ form_row(vehicleInscriptionForm.rental_price, {
                'label': "Rental Price*",
                'attr': {
                    class: "form-control"
                }
            }) }}
            {{ form_row(vehicleInscriptionForm.purchase_date, {
                'label': "Purchase Date",
                'attr': {
                    class: "form-control"
                }
            }) }}
            {{ form_row(vehicleInscriptionForm.serial_number, {
                'label': "Serial_number",
                'attr': {
                    class: "form-control"
                }
            }) }}
            {{ form_row(vehicleInscriptionForm.id_category, {
                'label': "Category",
                'attr': {
                    class: "form-control"
                }
            }) }}
        
            {{ form_rest(vehicleInscriptionForm) }}
            <br>
            <hr>
            <div class="row justify-content-md-center">
                <button type="submit" class="btn btn-lg btn-primary">validate</button>
                {{ form_end(vehicleInscriptionForm) }}
            </div>

        </div>
    </div>
	{% endblock %}

